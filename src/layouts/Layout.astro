---
import DarkToggle from "../components/DarkToggle.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2"  />
    <title>{title}</title>

    <!-- SEO -->
    <meta
      name="description"
      content="Cheatsheet list for developers. Made by the community, for the community."
    />
    <meta name="twitter:card" content="summary" />
    <meta name="twitter:site" content="@dhravyashah" />
    <meta name="twitter:title" content="Cheatsheets for developers" />
    <meta
      name="twitter:description"
      content="Cheatsheet list for developers. Made by the community, for the community."
    />
    <meta
      name="twitter:image"
      content="https://cheats.dhr.wtf/android-chrome-512x512.png"
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Cheatsheets for developers" />
    <meta
      property="og:description"
      content="Cheatsheet list for developers. Made by the community, for the community."
    />
    <meta property="og:site_name" content="Cheatsheets for developers" />
    <meta property="og:url" content="https://cheats.dhr.wtf" />
    <meta
      property="og:image"
      content="/android-chrome-512x512.png"
    />
  </head>
  <body>
    <!-- Dark mode toggle -->
    <div
      class="fixed top-0 right-0 md:right-20 z-50 flex items-center justify-center w-12 m-4 cursor-pointer"
    >
      <DarkToggle />
    </div>
    <slot />

    <Footer />

    <style is:global>
      :root {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
        --slider-bg: #dddddd;
        --slider-bg-before: #fff;
        --slider-input-bg: #8758ff;
      }

      [data-theme="light"] {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
      }

      [data-theme="dark"] {
        --accent: 124, 58, 237;
        --accent-gradient: linear-gradient(
          45deg,
          rgb(var(--accent)),
          #da62c4 30%,
          white 60%
        );
        color: rgb(250, 250, 250);
      }

      html {
        font-family: system-ui, sans-serif;
      }

      [data-theme="light"] {
        background-color: rgb(250, 250, 250);
      }

      [data-theme="dark"] {
        background-color: #212121;
      }

      code {
        font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
          DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
      }

      .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }

      [data-theme="dark"] .text-gradient {
        background-image: var(--accent-gradient);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-size: 400%;
        background-position: 0%;
      }

      .instructions {
        line-height: 1.6;
        margin: 1rem 0;
        border: 5px solid rgba(var(--accent), 25%);
        background-color: white;
        padding: 1rem;
        border-radius: 0.4rem;
        width: 100%;
      }

      [data-theme="dark"] .instructions {
        line-height: 1.6;
        margin: 1rem 0;
        border: 5px solid rgba(var(--accent), 25%);
        background-color: #212121;
        padding: 1rem;
        border-radius: 0.4rem;
        color: rgb(250, 250, 250);
      }

      .instructions code {
        font-size: 0.875em;
        font-weight: bold;
        background: rgba(var(--accent), 12%);
        color: rgb(var(--accent));
        border-radius: 4px;
        padding: 0.3em 0.45em;
      }
      .instructions strong {
        color: rgb(var(--accent));
      }
      .link-card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(20ch, 1fr));
        gap: 1rem;
        padding: 0;
      }
      .search-bar {
        width: 100%;
        margin-bottom: 20px;
        display: flex;
        padding: 1rem;
        background-color: white;
        background-size: 400%;
        border-radius: 5px;
        background-position: 100%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
          0 2px 4px -2px rgba(0, 0, 0, 0.1);
      }

      /* Dark mode */
      [data-theme="dark"] .search-bar {
        background-color: #212121;
        /* background-image: var(--accent-gradient); */
        background-size: 400%;
        border-radius: 0.5rem;
        background-position: 0%;
        transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        border: 5px solid rgba(var(--accent), 25%);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1),
          0 2px 4px -2px rgba(0, 0, 0, 0.1);
        text-transform: capitalize;
      }

      .link-card > a {
        width: 100%;
        text-decoration: none;
        line-height: 1.4;
        padding: 1rem 1.3rem;
        border-radius: 0.35rem;
        opacity: 0.8;
        margin: 0;
        font-size: 1.25rem;
        transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
        color: #111;
        background-color: white;
      }
      [data-theme="dark"] .link-card > a {
        color: #fff;
        background-color: #111;
      }

      [data-theme="light"] .link-card > a {
        color: #111;
        background-color: white;
      }
    </style>
  </body>
</html>
